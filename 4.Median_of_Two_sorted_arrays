class Solution {
public:
    double findMedianSortedArrays(vector<int>& nums1, vector<int>& nums2) {
        int m = nums1.size(), n = nums2.size();
        vector<int> final;
        int total = m + n;
        int i = 0, j = 0;
        while (i < m || j < n) {
            if (i < m && (j >= n || nums1[i] <= nums2[j])) {
                final.push_back(nums1[i]);
                i++;
            } else if (j < n) {
                final.push_back(nums2[j]);
                j++;
            }
        }
        int half = total / 2;
        double median;
        if (total % 2 == 1) {
            median = final[half];
        } 
        else {
            median = (final[half] + final[half - 1]) / 2.0;
        }
        return median;
    }
};